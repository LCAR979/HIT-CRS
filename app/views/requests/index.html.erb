<% @buildings = Request.buildings %>
<% @days = Request.days %>
<div class="col-xs-8 col-xs-offset-2" >
  <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">Requests wait to be processed</div>
        <table class="table" id="requests-list">  
          <thead>
            <tr>      
              <th>Week</th>
              <th>Day</th>
              <th>Time</th>
              <th>Building</th>
              <th>Location</th>
              <th>Details</th>
            </tr>
          </thead>
          <tbody>
            <% if @all_requests != nil %>
              <% @all_requests.each do |request| %> 
                <% if request.status ==2%> 
                  <tr>                              
                    <td><%= request.week %></td> 
                    <td><%= @days[request.day] %></td>
                    <td>Course <%=request.time %> ~ <%=request.time + 1%></td>
                    <td><%= @buildings[request.building] %></td>
                    <td><%= request.location %></td>                              
                    <td>
                      <% str= '/staffs/'+@staff.id.to_s+'/requests/'+request.id.to_s %> 
                      <%= link_to 'View detail', str, :method => :get %>
                    </td>
                  </tr>
                <%end%>
              <%end%>
            <%end%>
          </tbody>
        </table>
      </div>
  </div>
</div>

<%= render 'layouts/home_btn' %>
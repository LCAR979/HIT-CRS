<% @buildings = Request.buildings %>
<% @days = Request.days %>
<% @roomsize = Request.roomsize %>
<% @media = Request.media %>
<div class="panel panel-primary">
  <div class="panel-heading ">Reservation details</div>

  <table class="table">
    <tbody>
      <tr class="row"> 
        <td class="col-xs-5"> Week </td> 
        <td class="col-xs-7"> <%= @request.week %></td>
      </tr>
      <tr class="row"> 
        <td class="col-xs-5"> Day </td> 
        <td class="col-xs-7"> <%= @days[@request.day] %></td>
      </tr>
      <tr class="row"> 
        <td class="col-xs-5"> Time </td> 
        <td class="col-xs-7"> Course <%= @request.time %> ~ Course <%= @request.time + 1 %>
        </td>
      </tr>
      <tr class="row"> 
        <td class="col-xs-5"> Building </td> 
        <td class="col-xs-7"> <%= @buildings[@request.building] %></td>
      </tr>
      <tr class="row"> 
        <td class="col-xs-5"> Room</td> 
        <td class="col-xs-7"> <%= @request.location %></td>
      </tr>
      <tr class="row"> 
        <td class="col-xs-5"> Size </td> 
        <td class="col-xs-7"> <%= @request.size %></td>
      </tr>
      <tr class="row"> 
        <td class="col-xs-5"> Media</td> 
        <td class="col-xs-7"> 
          <% if @request.media==true %>
            <%= "Use" %>
          <% else %>
            <%= "Not use" %>
          <% end %>
        </td>
      </tr>
      <tr class="row"> 
        <td class="col-xs-5"> Discription</td> 
        <td class="col-xs-7"> <%= @request.description %>
        </td>
      </tr>
    </tbody>
  </table>
</div>

<%str = '/staffs/audit/'+@request.id.to_s%>
<%=form_for @request, url: str,:html => {class:'form-horizontal col-lg-12', 'role'=>'form', 'data-toggle'=>'validator'}  do |r|%>

  <div class="form-group">
    <%=r.label :comment, class:"control-label col-lg-2"  %>
    <div class="col-lg-10">
      <%=r.text_area :comment , class:"form-control",placeholder:"Comment" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 selectContainer">
        <%=r.select :status,  [['permited',0],['rejected',1]], class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-lg-2"></div>
        <div class="col-lg-10">
          <%=r.submit "Audit", class:"btn btn-info"%>
        </div>
  </div>
<% end %>

<%= render 'layouts/home_btn' %>